@model IEnumerable<HMSS.Models.Doctors_info>

@{
    ViewBag.Title = "show";
}
<link rel="stylesheet" href="~/MyOwnContent/Table.css" />
<h2 style="margin: 20px 0 0 38%; background-color: red; width: fit-content; color: whitesmoke; padding: 20px;">Show Doctors Details</h2>

<p style=" position: absolute; top: 500px; left: 13px; background-color: black; width: fit-content; padding: 20px; cursor: pointer;">
    <a style="color:white" @Html.ActionLink("Create New", "Create")</a> 
</p>
<table style="min-width:1000px;border-spacing:0;margin-top:40px;" class="fs-15 w-full">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="padding: 15px; background-color: #eee; font-weight: bold; border-bottom: 1px solid #eee; border-left: 1px solid #eee; ">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="padding: 15px; border-bottom: 1px solid #eee; border-left: 1px solid #eee;">
            @Html.DisplayFor(modelItem => item.Specialty)
        </td>
        <td style="padding: 15px; background-color: #eee; font-weight: bold; border-bottom: 1px solid #eee; border-left: 1px solid #eee; ">
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
